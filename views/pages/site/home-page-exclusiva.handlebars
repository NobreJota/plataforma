                  <div class="card-body">
                    {{!-- <h6 class="card-title mb-2 text-truncate"
                        title="{{this.descricao}}">
                      {{this.descricao}}{{this.complete}}
                    </h6> --}}
                     <div class="pih-row">
                        {{!-- <span class="pih-label">Desc.</span> --}}
                        <span class="pih-value">
                          {{this.descricao}} {{this.complete}}
                        </span>
                      </div>

                    <div class="produto-info-home">
                      <div class="pih-row">
                        <span class="pih-label">C√≥d.</span>
                        <span class="pih-value">{{this.codigo}}</span>
                      </div>

