<body>

  {{!-- ===================== HEADER 100% ===================== --}}
  <div class="container-fluid my-0" style="background:#ffffff;">
        <div id="headerLojaExclusiva">
            {{!-- Bem vindo √† loja : --}}
            <a href="/loja/{{produto.loja_id}}">{{produto.marcaloja}}</a>
        </div>
        {{!-- BUSCA DENTRO DA LOJA --}}
        <div class="container my-1">
            <div class="top-bar-loja" style="background:transparent;">
                  <button type="button" id="btnMenuMobile" class="btn-menu-mobile" aria-label="Abrir menu">
                    ‚ò∞
                  </button>
                  <div class="search-loja-wrapper">
                      {{!-- <span class="search-loja-label">
                      Buscar produtos nesta loja
                      </span> --}}

                      <div class="search-loja-inner">
                          <span class="search-loja-icon">üîç</span>

