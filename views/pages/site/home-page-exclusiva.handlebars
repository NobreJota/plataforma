<script>
(function () {
  const lojaId   = '{{produto.loja_id}}';
  const input    = document.getElementById('buscaLoja');
  const sugBox   = document.getElementById('buscaLojaSugestoes');
  const cardsRow = document.getElementById('cardsRow');
  if (!input || !sugBox || !cardsRow) return;

  const originalHTML = cardsRow.innerHTML;  // salva os cards originais
  const placeholderImg = '';                // se quiser, coloque uma URL de placeholder
  let timer = null;

  // ================== FUN√á√ÉO AUXILIAR PARA MONTAR CARDS ==================
  async function carregarCards(q) {
    if (!q || q.trim().length < 3) {
      // volta pros cards originais
      cardsRow.innerHTML = originalHTML;
      return;
    }

    try {
      const url = `/home-page-exclusiva/busca?loja=${encodeURIComponent(lojaId)}&q=${encodeURIComponent(q.trim())}`;
      const resp = await fetch(url);
      const itens = await resp.json();
      console.log('itens',itens)
      if (!Array.isArray(itens) || itens.length === 0) {
        cardsRow.innerHTML = `
          <div class="col-12">
            <p class="text-muted mb-0">Nenhum produto encontrado para "${q}".</p>
          </div>`;
        return;
      }

      const html = itens.map(p => {
        const img = (p.pageurls && p.pageurls[0]) ? p.pageurls[0] : placeholderImg;
        const preco = p.precoprazo
          ? 'R$ ' + Number(p.precoprazo).toLocaleString('pt-BR', { minimumFractionDigits: 2 })
          : '0,00';

        return `
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
            <article class="card h-100 card-product">
              <a href="/produto/${p._id}" class="d-block">
                <img class="w-100 h-100 p-2"
                     src="${img}"
                     alt="${p.descricao || ''}"
                     loading="lazy">
              </a>

              <div class="card-body">
                <h6 class="card-title mb-2 text-truncate"
                    title="${p.descricao || ''}">
                  ${p.descricao || ''}
                </h6>

                <div class="produto-info-home">
                  <div class="pih-row">
                    <span class="pih-label">C√≥d.</span>
                    <span class="pih-value">${p.codigo || ''}</span>
                  </div>

                  <div class="pih-row">
                    <span class="pih-label">√Ä vista</span>
                    <span class="pih-value">${preco}</span>
                  </div>

                  <div class="pih-row">
                    <span class="pih-label">Desc.</span>
                    <span class="pih-value">
                      ${p.descricao || ''} ${p.complete || ''}
                    </span>
                  </div>

                 

                  <div class="mt-1">
                    <a class="btn btn-sm btn-outline-primary btn-detalhe"
                       href="/home-detalhe/${p._id}">
                      Detalhes
                    </a>
                  </div>
                </div>
              </div>
            </article>
          </div>`;
      }).join('');

      cardsRow.innerHTML = html;
    } catch (e) {
      console.error('Erro na busca AJAX:', e);
    }
  }

  // ================== INPUT: APENAS MOSTRA SUGEST√ïES ==================
  input.addEventListener('input', function () {
    const q = this.value.trim();
    clearTimeout(timer);

    if (q.length < 3) {
      sugBox.innerHTML = '';
      sugBox.style.display = 'none';
      // N√ÉO mexe nos cards aqui!
      return;
    }

    timer = setTimeout(async () => {
      try {
        const url = `/home-page-exclusiva/busca?loja=${encodeURIComponent(lojaId)}&q=${encodeURIComponent(q)}`;
        const resp = await fetch(url);
        const itens = await resp.json();
        console.log('');
        console.log('3000',itens);
        console.log('');
        if (!Array.isArray(itens) || itens.length === 0) {
          sugBox.innerHTML = '';
          sugBox.style.display = 'none';
          return;
        }

        // escape b√°sico pra n√£o quebrar o HTML (e evitar XSS)
        function esc(v = '') {
          return String(v).replace(/[&<>"']/g, (ch) => ({
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#39;',
          }[ch]));
        }


        // monta lista de sugest√µes (sem mexer nos cards)
        sugBox.innerHTML = itens.map(p => `
            <div class="sug-item"
              data-desc="${esc(p.descricao || '')}"
              data-codigo="${esc(p.codigo || '')}"
              data-preco="${esc(p.precoprazo || '')}">
              <div class="sug-desc">${esc(p.descricao || '')}</div>
              <div class="sug-preco">${p.precoprazo ? esc(p.precoprazo) : '0,00'}</div>
              <div class="sug-codigo">(${esc(p.codigo || '')})</div>
          </div>
        `).join('');

        sugBox.style.display = 'block';
      } catch (e) {
        console.error(e);
      }
    }, 250);
  });

  // ================== CLIQUE NA SUGEST√ÉO: A√ç SIM BUSCA E TROCA OS CARDS ==================
  sugBox.addEventListener('click', function (ev) {
    const btn = ev.target.closest('.sug-item');
    if (!btn) return;

    const desc = btn.dataset.desc || '';
    input.value = desc;        // coloca o texto escolhido no input
    sugBox.style.display = 'none';

    // agora sim: limpa e recarrega os cards s√≥ com o resultado dessa descri√ß√£o
    carregarCards(desc);
  });

  // clicar fora fecha o dropdown
  document.addEventListener('click', function (ev) {
    if (ev.target !== input && !sugBox.contains(ev.target)) {
      sugBox.style.display = 'none';
    }
  });
})();
</script>



