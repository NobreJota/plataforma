<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Minha Loja Online</title>

<style>
/* LOGO */
.navbar-brand { letter-spacing: .5px; }

/* Busca: feedback visual */
#homeSearchInput:focus {
  box-shadow: 0 0 0 .25rem rgba(255,193,7,.35);
  background-color: #fff8dc;
}

/* Cards de produto */
.product-card { border-radius: 1rem; }
.product-card .price {
  color: #df061f;
  font-weight: 700;
  font-size: 1.05rem;
}

/* Título com 2 linhas no máximo, sem quebrar layout */
.product-title{
  min-height: 3.4em;
  display: -webkit-box;
  -webkit-line-clamp: 2;        /* limita a 2 linhas */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Imagem sempre “contida” dentro do box */
.card .ratio img { object-fit: contain; }
</style>
<style>
    /* barra de chips rolável e sem barra de rolagem visível */
.no-scrollbar::-webkit-scrollbar { display: none; }
.no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

.chip { border-radius: 999px; padding: .35rem .9rem; white-space: nowrap; }
.chip.active { background: #0d6efd; color: #fff; border-color: #0d6efd; }

/* barra de chips rolável e sem barra de rolagem visível */
.no-scrollbar::-webkit-scrollbar { display: none; }
.no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

.chip { border-radius: 999px; padding: .35rem .9rem; white-space: nowrap; }
.chip.active { background: #0d6efd; color: #fff; border-color: #0d6efd; }

</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/home.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/5a1d5d1b5a.js" crossorigin="anonymous"></script>

</head>
<body>
<!-- Topbar -->
<nav class="navbar navbar-dark bg-dark sticky-top shadow-sm">
  <div class="container-fluid gap-3">
    <a class="navbar-brand fw-bold" href="/">
      <span class="text-white">ROTA</span><span class="text-danger">es</span>
    </a>

    <form class="d-flex flex-grow-1 search-form" action="/buscar" method="GET" id="homeSearchForm" style="max-width: 900px;">
      <input id="homeSearchInput" name="q" class="form-control me-2" type="search" placeholder="Buscar produtos..." aria-label="Buscar">
      <button class="btn btn-warning fw-semibold px-4" type="submit">Pesquisar</button>
    </form>

    <div class="d-flex align-items-center gap-3">
      <a href="/login" class="text-white text-decoration-none"><i class="fa-regular fa-user me-1"></i>Login</a>
      <a href="/carrinho" class="text-white text-decoration-none"><i class="fa-solid fa-cart-shopping me-1"></i>Carrinho</a>
    </div>
  </div>
</nav>
<div class="bg-light border-bottom">
  <div class="container py-3">
    <form id="filtroForm" class="row gy-2 gx-2 align-items-end" method="GET" action="/">
      {{!-- Busca texto --}}
      <div class="col-12 col-md-5">
        <label class="form-label mb-1">O que você procura?</label>
        <input name="q" value="{{q}}" class="form-control" placeholder="Ex.: cimento, torneira, carrinho de mão">
      </div>

      {{!-- Município --}}
      <div class="col-6 col-md-2">
        <label class="form-label mb-1">Município</label>
        <select name="cidade" id="selectCidade" class="form-select">
          <option value="">Todos</option>
          {{#each cidades}}
            <option value="{{this}}" {{#if (eq ../cidadeSelecionada this)}}selected{{/if}}>{{this}}</option>
          {{/each}}
        </select>
      </div>

      {{!-- Loja (depende do município) --}}
      <div class="col-6 col-md-3">
        <label class="form-label mb-1">Loja</label>
        <select name="loja" id="selectLoja" class="form-select" {{#unless lojas.length}}disabled{{/unless}}>
          <option value="">Todas</option>
          {{#each lojas}}
            <option value="{{this._id}}" {{#if (eq ../lojaSelecionada this._id)}}selected{{/if}}>{{this.razao}}</option>
          {{/each}}
        </select>
      </div>

      <div class="col-12 col-md-2 d-grid">
        <button class="btn btn-primary">Aplicar filtros</button>
      </div>

      {{!-- campo oculto para segmento selecionado pelos chips --}}
      <input type="hidden" name="segmento" id="segmentoHidden" value="{{segmentoSelecionado}}">
    </form>

    {{!-- Chips de Segmentos --}}
    <div class="mt-3 overflow-x-auto no-scrollbar">
      <div class="d-flex gap-2 flex-nowrap">
        <button type="button"
                class="chip btn btn-outline-secondary {{#unless segmentoSelecionado}}active{{/unless}}"
                data-id="">
          Todos
        </button>
        {{#each segmentos}}
          <button type="button"
                  class="chip btn btn-outline-secondary {{#if (eq ../segmentoSelecionado this._id)}}active{{/if}}"
                  data-id="{{this._id}}">
            {{this.nomeDepartamento}}
          </button>
        {{/each}}
      </div>
    </div>

    <div class="mt-2">
      <a href="/" class="text-decoration-underline small">Limpar todos os filtros</a>
    </div>
  </div>
</div>

<div class="container my-4">

  {{!-- Banner opcional --}}
  {{#if banner}}
  <div class="row mb-3">
    <div class="col">
      <img src="{{banner.url}}" alt="{{banner.alt}}" class="img-fluid rounded shadow-sm w-100">
    </div>
  </div>
  {{/if}}

  <div class="row g-3" id="gridProdutos">
    {{!-- Produtos --}}
    {{#each produtos}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <article class="card h-100 product-card shadow-sm">
        <div class="ratio ratio-4x3">
          <img src="{{this.imagemUrl}}" alt="{{this.descricao}}" class="card-img-top p-2 object-fit-contain">
        </div>
        <div class="card-body d-flex flex-column">
          <h6 class="card-title text-center product-title">{{this.descricao}}</h6>
          <p class="price text-center mb-3">{{moeda this.preco}}</p>
          <button class="btn btn-success w-100 mt-auto" onclick="adicionarCarrinho('{{this._id}}')">Comprar</button>
        </div>
      </article>
    </div>
    {{/each}}

    {{!-- Slots de Anunciantes (opcionais) --}}
    {{#each anuncios}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <aside class="card h-100 product-card d-flex align-items-center justify-content-center p-2 shadow-sm">
        <img src="{{this.logo}}" alt="{{this.nome}}" class="img-fluid p-3" style="max-height:120px;">
        <div class="card-body text-center">
          <h6 class="mb-1">{{this.nome}}</h6>
          <small class="text-muted">{{this.segmento}}</small>
          <a href="{{this.url}}" class="btn btn-success w-100 mt-3">Ir</a>
        </div>
      </aside>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/home.js"></script>
</body>

<script>
// public/js/home.js
document.addEventListener('DOMContentLoaded', () => {
  const form  = document.getElementById('homeSearchForm');
  const input = document.getElementById('homeSearchInput');

  form.addEventListener('submit', (e) => {
    const q = (input.value || '').trim();
    if (!q) {
      e.preventDefault();
      alert('Digite um termo para buscar.');
      input.focus();
    } else {
      // só pra dar um feedback visual de sucesso
      input.classList.add('bg-success-subtle');
      setTimeout(() => input.classList.remove('bg-success-subtle'), 1200);
    }
  });
});

function adicionarCarrinho(id) {
  fetch(`/carrinho/add/${id}`, { method: 'POST' })
    .then(r => r.ok ? r.json() : Promise.reject(r))
    .then(() => alert('Produto adicionado ao carrinho!'))
    .catch(() => alert('Não foi possível adicionar ao carrinho agora.'));
}

</script>
