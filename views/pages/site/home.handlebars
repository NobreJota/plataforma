<!-- Topbar -->
<nav class="navbar navbar-dark bg-dark sticky-top shadow-sm">
  <div class="container-fluid gap-3">
    <a class="navbar-brand fw-bold" href="/">
      <span class="text-white">ROTA</span><span class="text-danger">es</span>
    </a>

    <form class="d-flex flex-grow-1 search-form" action="/buscar" method="GET" id="homeSearchForm" style="max-width: 900px;">
      <input id="homeSearchInput" name="q" class="form-control me-2" type="search" placeholder="Buscar produtos..." aria-label="Buscar">
      <button class="btn btn-warning fw-semibold px-4" type="submit">Pesquisar</button>
    </form>

    <div class="d-flex align-items-center gap-3">
      <a href="/login" class="text-white text-decoration-none"><i class="fa-regular fa-user me-1"></i>Login</a>
      <a href="/carrinho" class="text-white text-decoration-none"><i class="fa-solid fa-cart-shopping me-1"></i>Carrinho</a>
    </div>
  </div>
</nav>

<div class="bg-light border-bottom">
  <div class="container py-3">
    <form id="filtroForm" class="row gy-2 gx-2 align-items-end" method="GET" action="/">
      <div class="col-12 col-md-5">
        <label class="form-label mb-1">O que você procura?</label>
        <input name="q" value="{{q}}" class="form-control" placeholder="Ex.: cimento, torneira, carrinho de mão">
      </div>

      <div class="col-6 col-md-2">
        <label class="form-label mb-1">Município</label>
        <select name="cidade" id="selectCidade" class="form-select">
          <option value="">Todos</option>
          {{#each cidades}}
            <option value="{{this}}" {{#if (eq ../cidadeSelecionada this)}}selected{{/if}}>{{this}}</option>
          {{/each}}
        </select>
      </div>

      <div class="col-6 col-md-3">
        <label class="form-label mb-1">Loja</label>
        <select name="loja" id="selectLoja" class="form-select" {{#unless lojas.length}}disabled{{/unless}}>
          <option value="">Todas</option>
          {{#each lojas}}
            <option value="{{this._id}}" {{#if (eq ../lojaSelecionada this._id)}}selected{{/if}}>{{this.razao}}</option>
          {{/each}}
        </select>
      </div>

      <div class="col-12 col-md-2 d-grid">
        <button class="btn btn-primary">Aplicar filtros</button>
      </div>

      <input type="hidden" name="segmento" id="segmentoHidden" value="{{segmentoSelecionado}}">
    </form>

    <div class="mt-3 overflow-x-auto no-scrollbar">
      <div class="d-flex gap-2 flex-nowrap">
        <button type="button"
                class="chip btn btn-outline-secondary {{#unless segmentoSelecionado}}active{{/unless}}"
                data-id="">
          Todos
        </button>
        {{#each segmentos}}
          <button type="button"
                  class="chip btn btn-outline-secondary {{#if (eq ../segmentoSelecionado this._id)}}active{{/if}}"
                  data-id="{{this._id}}">
            {{this.nomeDepartamento}}
          </button>
        {{/each}}
      </div>
    </div>

    <div class="mt-2">
      <a href="/" class="text-decoration-underline small">Limpar todos os filtros</a>
    </div>
  </div>
</div>

<div class="container my-4">
  {{#if banner}}
  <div class="row mb-3">
    <div class="col">
      <img src="{{banner.url}}" alt="{{banner.alt}}" class="img-fluid rounded shadow-sm w-100">
    </div>
  </div>
  {{/if}}

  {{#if produtos.length}}
  <div class="row g-3" id="gridProdutos">
    {{#each produtos}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <article class="card h-100 product-card shadow-sm">
        <div class="ratio ratio-4x3">
          <img src="{{this.imagemUrl}}" alt="{{this.descricao}}" class="card-img-top p-2 object-fit-contain">
        </div>
        <div class="card-body d-flex flex-column">
          <h6 class="card-title text-center product-title">{{this.descricao}}</h6>
          <p class="price text-center mb-3">{{moeda this.preco}}</p>
          <button class="btn btn-success w-100 mt-auto" onclick="adicionarCarrinho('{{this._id}}')">Comprar</button>
        </div>
      </article>
    </div>
    {{/each}}
  
    {{#each anuncios}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <aside class="card h-100 product-card d-flex align-items-center justify-content-center p-2 shadow-sm">
        <img src="{{this.logo}}" alt="{{this.nome}}" class="img-fluid p-3" style="max-height:120px;">
        <div class="card-body text-center">
          <h6 class="mb-1">{{this.nome}}</h6>
          <small class="text-muted">{{this.segmento}}</small>
          <a href="{{this.url}}" class="btn btn-success w-100 mt-3">Ir</a>
        </div>
      </aside>
    </div>
    {{/each}}
  </div>
  {{else}}
    <div class="alert alert-info">
      Nenhum produto encontrado {{#if q}}para “{{q}}”{{/if}}.
      <a href="/">Limpar filtros</a>
    </div>
 {{/if}}
</div>
