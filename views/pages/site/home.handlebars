    .search-wrap { position: relative; } /* o wrapper do input */
    .search-form{
      display:grid; gap:8px; align-items:center;
      grid-template-columns:
      minmax(440px, 1fr)  /* <- input cresce */
      minmax(120px, 14vw)
      minmax(120px, 14vw)
      auto;
      background: #04eadb;
      margin: 5px;
    }

    /* meio (form) ocupa o espa√ßo */
    .search-form{
      flex: 1 1 auto;
      display: grid;
      grid-template-columns: 2.6fr 1fr 1fr; /* BUSCA manda */
      gap: 12px;
      align-items: center;
      background: #fff;
