    const heroRatio = img.parentElement.clientWidth / img.parentElement.clientHeight; // ex: largura/300
    if (imgRatio < heroRatio) {
      // imagem "alta" pro hero -> contain pra n√£o cortar
      img.classList.add('fit-contain');
