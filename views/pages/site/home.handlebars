    }

    .brand-accent{ color: #ff4dc4; }           /* cor do "es" */

    /* a√ß√µes sempre √† direita */
    .actions{
      margin-left: auto;
      display: flex;
      align-items: center;
      gap: 12px;
      white-space: nowrap;
    }

    .action-link{
      color:#ecf3ff; text-decoration:none; font-weight:600;
      display:inline-flex; align-items:center; gap:6px;
      background: rgba(255,255,255,.08);
