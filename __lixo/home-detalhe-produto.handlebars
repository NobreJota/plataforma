.topbar-right{
  display: flex;
  align-items: center;
  gap: 10px;
}

.topbar-login{
  color: #fff;
  text-decoration: none;
  font-size: 13px;
  font-weight: 700;
  padding: 8px 12px;
  border: 1px solid rgba(255,255,255,.35);
  border-radius: 8px;
  line-height: 1;
}

.topbar-login:hover{
  background: rgba(255,255,255,.12);
  border-color: rgba(255,255,255,.55);
