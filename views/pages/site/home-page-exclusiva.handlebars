    }

     .cards-row{
        display: grid !important;
        grid-template-columns: repeat(4, minmax(220px, 1fr));
        gap: 16px;
        margin: 0 !important;   /* mata margin negativa do .row */
        justify-content: center; /* <- resolve ‚Äújogado pra esquerda‚Äù */
    }

    /* remove o ‚Äúcol-‚Äù interferindo no grid */
    .cards-row > [class*="col-"]{
      padding: 0 !important;
      max-width: none !important;
      flex: initial !important;
    }

    /* CAIXA CENTRAL (simetria do conte√∫do) */
    .page-inner{
      max-width: 1320px;                 /* ajuste: 1200/1280/1360 */
      margin: 0 auto;                    /* centraliza a caixa */
      background: violet;
    }

    /* Layout interno (menu + cards) */
    .page-inner.page-wrapper{
      display: grid;
      grid-template-columns: clamp(180px, 22vw, 300px) minmax(0, 1fr);
      gap: 16px;
      align-items: start;
    }

    .produto-info-home {
      font-size: 0.8rem;
