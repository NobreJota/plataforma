    const heroRatio = img.parentElement.clientWidth / img.parentElement.clientHeight; // ex: largura/300
    if (imgRatio < heroRatio) {
      // imagem "alta" pro hero -> contain pra n√£o cortar
      img.classList.add('fit-contain');
    } else {
      img.classList.remove('fit-contain');
    }
  });
});

document.querySelectorAll('.home-card-img img').forEach(img => {
  img.addEventListener('load', () => {
    const r = img.naturalWidth / img.naturalHeight;
    // se for muito "alta/quadrada", evita corte
    if (r < 1.4) img.classList.add('fit-contain');
    else img.classList.remove('fit-contain');
  });
});

function ajustarDestaquesAuto() {
  document.querySelectorAll('.home-card-img img').forEach((img) => {
    const apply = () => {
      const w = img.naturalWidth || 0;
      const h = img.naturalHeight || 0;
      if (!w || !h) return;

      const r = w / h;

      // ‚úÖ regra pr√°tica:
      // - se for muito alta/quadrada -> contain (evita cortar muito)
      // - se for banner -> cover
      if (r < 1.45) img.classList.add('fit-contain');
      else img.classList.remove('fit-contain');
    };

    if (img.complete) apply();
    else img.addEventListener('load', apply, { once: true });
  });
}

// roda quando a p√°gina estiver pronta
