(function(){
  const input = document.getElementById("inputBusca");
  const nudge = document.getElementById("loginNudge");
  const closeBtn = nudge?.querySelector(".login-nudge-close");

  if (!input || !nudge) return;

  // se estiver logado, nunca mostra
  const isAuth = document.body.dataset.auth === "1";
  if (isAuth) return;

  const STORAGE_KEY = "loginNudgeClosedAt";

  function todayKey(){
    return new Date().toISOString().slice(0,10); // yyyy-mm-dd
  }

  function wasClosedToday(){
    return localStorage.getItem(STORAGE_KEY) === todayKey();
  }

  function markClosedToday(){
    localStorage.setItem(STORAGE_KEY, todayKey());
  }

  function showNudge(){
    if (wasClosedToday()) return;
    nudge.hidden = false;
  }

  function hideNudge(){
    nudge.hidden = true;
  }

  // MOSTRA quando digitar a primeira letra
  input.addEventListener("input", () => {
    const q = input.value.trim();
    if (q.length >= 1) showNudge();
    if (q.length === 0) hideNudge();
  });

  // FECHA s√≥ no X (e grava decis√£o do usu√°rio)
  closeBtn?.addEventListener("click", (e) => {
    e.preventDefault();
    e.stopPropagation();
    hideNudge();
    markClosedToday();
  });

})();
