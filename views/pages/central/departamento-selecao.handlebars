<script>
(function () {
  const form = document.getElementById("cadastroLojistaForm");
  if (!form) return;

  // Campos foc√°veis que nos interessam (evita hidden/disabled)
  const focusables = Array.from(form.querySelectorAll(
    "input:not([type='hidden']):not([disabled]), select:not([disabled]), textarea:not([disabled])"
  ));

  // Utilit√°rios
  function resetClasses(el){
    el.classList.remove("is-focus","is-filled");
    // Zera inline legado (CNPJ/CEP)
    el.style.backgroundColor = "";
    el.style.color = "";
    el.style.caretColor = "";
    el.style.border = "";
  }
  function markFocus(el){
    resetClasses(el);
    el.classList.add("is-focus"); // amarelo + texto preto
  }
  function markFilled(el){
    resetClasses(el);
    el.classList.add("is-filled"); // vermelho + texto branco
  }
  function nextOf(el){
    const i = focusables.indexOf(el);
    return i >= 0 ? focusables[i+1] : null;
  }

  // Eventos por campo
  focusables.forEach((el) => {
    // Sempre que ganhar foco: for√ßa amarelo e texto preto (derruba heran√ßas)
    el.addEventListener("focus", () => {
      markFocus(el);
    });

    // Perdeu foco: se tem valor -> vermelho; se vazio -> limpa
    el.addEventListener("blur", () => {
      if (String(el.value).trim() !== "") {
        markFilled(el);
      } else {
        resetClasses(el);
      }
    });

    // Enter dentro do campo
    el.addEventListener("keydown", (e) => {
      if (e.key !== "Enter") return;
      e.preventDefault(); // n√£o deixa submeter o form

      if (String(el.value).trim() === "") {
        alert("‚ö†Ô∏è Este campo n√£o pode ficar vazio!");
        // mant√©m o foco e garante amarelo + texto preto
        markFocus(el);
        el.focus();
        return;
      }

      // Campo ok -> fica vermelho
      markFilled(el);

      // Vai para o pr√≥ximo, j√° amarelo + texto preto
      const nx = nextOf(el);
      if (nx) {
        nx.focus();
        markFocus(nx);
      }
    });
  });

  // Caso a API de CNPJ/CEP pinte os campos (vermelho/branco),
  // nosso "focus" acima sempre vai sobrescrever para amarelo/preto.
})();
</script>


