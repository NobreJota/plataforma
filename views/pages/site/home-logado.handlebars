<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Área do usuário</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    
  .prefs hr{ display:none!important; }
  .prefs { border:0; }
  .prefs .form-text{ margin-top:8px; }
  .prefs select.form-select{ margin-bottom:0; }
</style>
 
</head>
<body>
  <!-- seu header/topbar aqui se quiser -->

  <main class="container py-4">
    <h5 class="mb-3">
      Olá, {{#if userSite.nome}}{{userSite.nome}}{{else}}{{userSite.email}}{{/if}}
    </h5>
    <p class="text-muted">Visitas registradas: {{userSite.visitas}}</p>

    <div class="alert alert-info">
      Esta página é provisória. Depois você coloca atalhos para “Minhas visitas”, “Favoritos”, etc.
    </div>
    <section class="container my-4">
        <h2 class="mb-3">Localização padrão</h2>
        <form action="/home-logado" method="post" class="row g-3 align-items-end prefs">
            <div class="col-12 col-md-5">
              <label class="form-label">Cidade</label>
              <select id="selCidadePadrao" name="cidade" class="form-select">
                <option value="__ALL__" {{#unless cidadeSelecionada}}selected{{/unless}}>Todos</option>
                {{#each cidades}}
                  <option value="{{this}}" {{#if (eq ../cidadeSelecionada this)}}selected{{/if}}>{{this}}</option>
                {{/each}}
              </select>
            </div>

            <div class="col-12 col-md-5">
              <label class="form-label">Bairro</label>
              <select id="selBairroPadrao" name="bairro" class="form-select">
                <option value="__ALL__" {{#unless bairroSelecionado}}selected{{/unless}}>Todos</option>
                {{#if bairroSelecionado}}
                  <option value="{{bairroSelecionado}}" selected>{{bairroSelecionado}}</option>
                {{/if}}
              </select>
              
            </div>

            <div class="col-12 col-md-2 d-grid align-self-end mt-3 mt-md-3">
              <!-- fica invisível/desabilitado até escolher um bairro válido -->
              <button id="btnSalvar" class="btn btn-primary" disabled style="visibility:hidden">Salvar</button>
            </div>
           <div class="col-12 col-md-5 offset-md-5">
              <div class="form-text mt-1">
                Padrões salvos. A HOME usará estes valores até você mudar.
              </div>
           </div>
        </form>
        <div class="mt-3">
          <a class="btn btn-outline-secondary mt-2" style="min-height:38px;background: black;color:red;" href="/logout">Logout</a>
          <a href="/" class="btn btn-outline-secondary mt-2" style="min-height:38px;background-color: black;color:red;">Home</a>
        </div>
    </section>

<script>
(function(){
  const selCidade = document.getElementById('selCidadePadrao');
  const selBairro = document.getElementById('selBairroPadrao');
  const btnSalvar = document.getElementById('btnSalvar');

  function validate(){
    // regra: só mostra/habilita “Salvar” quando um BAIRRO específico for escolhido
    // (ou seja, diferente de "__ALL__")
    const ok = !!selBairro.value && selBairro.value !== '__ALL__';
    btnSalvar.disabled = !ok;
    btnSalvar.style.visibility = ok ? 'visible' : 'hidden';
  }

  async function loadBairros(cidade, bairroSel){
    if (!cidade || cidade === '__ALL__'){
      selBairro.innerHTML = '<option value="__ALL__" selected>Todos</option>';
      validate();
      return;
    }
    selBairro.innerHTML = '<option value="">Carregando...</option>';
    try{
      const r = await fetch(`/bairros?cidade=${encodeURIComponent(cidade)}`, {cache:'no-store'});
      const data = await r.json();
      const itens = Array.isArray(data) ? data : (Array.isArray(data?.items) ? data.items : []);
      selBairro.innerHTML = ['<option value="__ALL__">Todos</option>']
        .concat(itens.map(b => `<option value="${b}" ${b===bairroSel?'selected':''}>${b}</option>`))
        .join('');
    }catch{
      selBairro.innerHTML = '<option value="__ALL__" selected>Todos</option>';
    }
    validate();
  }

  selCidade.addEventListener('change', () => loadBairros(selCidade.value, ''));
  selBairro.addEventListener('change', validate);

  // inicializa com o que veio do servidor
  document.addEventListener('DOMContentLoaded', () => {
    loadBairros('{{cidadeSelecionada}}', '{{bairroSelecionado}}');
  });
})();
</script>



