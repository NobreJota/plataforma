  slots[i] = null;
}

function resetSlots(){
  if (!window.$miSlotGrid) return;
  $miSlotGrid.innerHTML = '';
  for (let i = 0; i < MAX_SLOTS; i++) addEmptySlot(i);
  recompute();
}

