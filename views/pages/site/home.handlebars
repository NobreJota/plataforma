      let lastQuery = '';
      let abortCtrl = null;

      function hideLista(){
        lista.style.display = 'none';
        lista.innerHTML = '';
      }

      async function buscarSugestoes(q){
        if (abortCtrl) abortCtrl.abort();
        abortCtrl = new AbortController();

        const cidade = selCid?.value || '';
        const bairro = selBai?.value || '';

        const url = `/buscar-sugestoes?q=${encodeURIComponent(q)}`
                  + `&cidade=${encodeURIComponent(cidade)}`
                  + `&bairro=${encodeURIComponent(bairro)}`;

        const resp = await fetch(url, {
          signal: abortCtrl.signal,
          cache: 'no-store',
          headers: { 'Accept': 'application/json' }
        });

        if (!resp.ok) return [];
        const data = await resp.json();

        if (Array.isArray(data)) return data;
        if (Array.isArray(data.itens)) return data.itens;
        if (Array.isArray(data.items)) return data.items;
        return [];
      }

  // ===== input: digitação =====
  on(input, 'input', async e => {
    const q = (e.target.value || '').trim();

    if (q.length < 3) {
      hideLista();
      if (hiddenId) hiddenId.value = '';   // limpa id se o usuário apagar
      return;
    }

    if (q === lastQuery) return;
    lastQuery = q;

    try{
      const sugestoes = await buscarSugestoes(q);
      if (!sugestoes.length){
        hideLista();
        if (hiddenId) hiddenId.value = '';
        return;
      }
      console.log(' [ line 1141 => sugestoes]',sugestoes)
