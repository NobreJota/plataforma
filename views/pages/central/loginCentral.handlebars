<div style="background-color: #0b0b0b;color:#ffffff">
     <form class="form-signin text-center" method="POST" action="/central/menu" enctype="application/x-www-form-urlencoded">
       
        <img class="mb-4" src="" alt="Celke" width="72" height="72" style="border-radius: 50%;">
        <h1  class="h3 mb-3 font-weight-normal ">Área Restrita [central 10]</h1>
        {{>_msg}}
        <div class="form-group">
            <label>Usuário</label>
            <input name="email" type="text" class="form-control" placeholder="Digite o usuário">
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input name="senha" type="password" class="form-control" placeholder="Digite a senha"  autocomplete="on|off" maxlength="6" minlength="6">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
        <p class="text-center">Esqueceu a senha?</p>
    </form>
</div>
