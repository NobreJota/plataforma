    if (r < 1.4) img.classList.add('fit-contain');
    else img.classList.remove('fit-contain');
  });
});

function ajustarDestaquesAuto() {
  document.querySelectorAll('.home-card-img img').forEach((img) => {
    const apply = () => {
      const w = img.naturalWidth || 0;
      const h = img.naturalHeight || 0;
      if (!w || !h) return;

      const r = w / h;

      // ‚úÖ regra pr√°tica:
      // - se for muito alta/quadrada -> contain (evita cortar muito)
      // - se for banner -> cover
      if (r < 1.45) img.classList.add('fit-contain');
      else img.classList.remove('fit-contain');
    };

    if (img.complete) apply();
    else img.addEventListener('load', apply, { once: true });
  });
}

